

<h1>Tracks</h1>

<table>
  <thead>
    <th>Image</th>
    <th>Title</th>
    <th>BPM</th>
    <th>Price</th>
    <th>Show</th>
    <th>Edit</th>
    <th>Delete</th>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
    <tr>
      <td><img src=" <%= track.thumb_img %> " alt=""></td>
      <td><%= track.title %></td>
      <td><%= track.bpm %></td>
      <td>$<%= track.price %></td>
      <td> <%= link_to 'Show', track %></td>
      <td> <%= link_to 'Edit', edit_track_path(track) %></td>
      <td> <%= link_to 'Delete', @track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>

    <% end %>
  </tbody>


</table>

<a href="/tracks/new">Add Track</a>

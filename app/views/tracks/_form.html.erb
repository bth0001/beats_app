<div class="row">
  <div class="col-md-6">
  <%= form_for @track do |f| %>
        <div class="form-group">
          <%= f.label :title %><br>
          <%= f.text_field :title, class: 'form-control', :required => true %>
        </div>

        <div class="form-group">
          <%= f.label :time, "Length" %><br>
          <%= f.number_field :time , class: 'form-control', :required => true, :placeholder => "ex. 3:30" %>
        </div>

        <div class="form-group">
          <%= f.label :bpm, "BPM" %><br>
          <%= f.number_field :bpm, class: 'form-control', :required => true %>
        </div>

        <div class="form-group">
          <%= f.label :audio_url %><br>
          <%= f.text_field :audio_url, class: 'form-control', :required => true %>
        </div>

        <div class="form-group">
          <%= f.label "Image URL" %><br>
          <%= f.text_field :thumb_img, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :price %><br>
          <div class="input-group">
            <div class="input-group-addon">$</div>
            <%= f.number_field :price, class: 'form-control', :required => true %>
          </div>
        </div>

        <div class="form-group">
          <%= f.submit class: 'btn btn-success'%>
        </div>
      <% end %>
  </div>
</div>
